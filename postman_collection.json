			"name": "Register",
			"event": [
				{
					"listen": "test",
					"script": {
						"type": "text/javascript",
						"exec": [
							"let token = '';",
							"try {",
							"  const res = pm.response.json();",
							"  token = res && res.data && res.data.token ? res.data.token : '';",
							"} catch (e) { token = ''; }",
							"if (token) {",
							"  pm.collectionVariables.set('token', token);",
							"  pm.test('Token captured from register', function () { pm.expect(token).to.be.a('string').and.not.empty; });",
							"} else {",
							"  pm.test('Register response contains token', function () { pm.expect.fail('No token in response'); });",
							"}"
						]
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
